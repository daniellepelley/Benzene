<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<PackageVersion>0.0.1</PackageVersion>
		<Description>Benzene integration with FluentValidation</Description>
		<PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
		<Authors>Daniel Le Pelley</Authors>
		<AssemblyName>Benzene.FluentValidation</AssemblyName>
		<RootNamespace>Benzene.FluentValidation</RootNamespace>
		<PackageReadmeFile>README.md</PackageReadmeFile>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="FluentValidation" Version="11.8.0" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Benzene.Abstractions.MessageHandlers\Benzene.Abstractions.MessageHandlers.csproj" />
		<ProjectReference Include="..\Benzene.Abstractions.Messages\Benzene.Abstractions.Messages.csproj" />
		<ProjectReference Include="..\Benzene.Abstractions.Middleware\Benzene.Abstractions.Middleware.csproj" />
		<ProjectReference Include="..\Benzene.Abstractions.Validation\Benzene.Abstractions.Validation.csproj" />
		<ProjectReference Include="..\Benzene.Abstractions\Benzene.Abstractions.csproj" />
		<ProjectReference Include="..\Benzene.Results\Benzene.Results.csproj" />
	</ItemGroup>

	<ItemGroup>
		<None Include="docs\README.md" Pack="true" PackagePath="\" />
	</ItemGroup>

</Project>
